# Exa MCP Server Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Exa AI API key for search functionality
# Get your API key from: https://exa.ai/
EXA_API_KEY=your_exa_api_key_here

# Optional: Exa API configuration
# EXA_BASE_URL=https://api.exa.ai
# EXA_TIMEOUT=25000
# EXA_RETRIES=3

# Optional: Server configuration
# SERVER_NAME=exa-search-server
# SERVER_VERSION=0.3.6

# Optional: Log level (ERROR, WARN, INFO, DEBUG)
# Defaults to ERROR in production, DEBUG in development
LOG_LEVEL=INFO

# Optional: Environment (affects default log level)
NODE_ENV=development

# Optional: Disable log redaction (useful for debugging)
# Set to "false" to disable sensitive data redaction in logs
REDACT_LOGS=true

# Optional: Tool defaults
# DEFAULT_NUM_RESULTS=3
# DEFAULT_MAX_CHARACTERS=3000

# Optional: Cache Configuration
# Enable/disable request caching (default: true)
# CACHE_ENABLED=true
# Maximum number of cached items (default: 100)
# CACHE_MAX_SIZE=100
# Cache time-to-live in minutes (default: 5)
# CACHE_TTL_MINUTES=5